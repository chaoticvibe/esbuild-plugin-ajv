{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": [
    "*.cjs",
    "*.js",
    "*.mjs",
    "*.ts",
    "./src/**/*.ts",
    "./src/*.cjs",
    "./src/__fixtures__/*.js",
    ".eslintrc.cjs"
  ]
}
